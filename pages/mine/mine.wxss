
.banner_box {
    width: 100%;
    height: 460rpx;
    padding: 0 60rpx;
    background: #FEA2C5;
    box-sizing: border-box;
}
.notice {
    font-size: 32rpx;
    color: #fff;
}
.head_img {
    display: block;
    width: 180rpx;
    height: 180rpx;
    margin-top: 28rpx;
    margin-bottom: 24rpx;
}

.features_list {
    padding: 0 60rpx;
}
.features_item {
    width: 630rpx;
    height: 200rpx;
    padding: 0 40rpx;
    margin-top: 32rpx;
    font-size: 30rpx;
    color: #FEA2C5;
    box-shadow: 0 8rpx 40rpx -16rpx #FEA2C5;
    border-radius: 16rpx;
    box-sizing: border-box;
}
.left_box .line {
    width: 2rpx;
    height: 84rpx;
    background: #FEA2C5;
    margin-left: 30rpx;
}
.right_text {
    margin-left: 100rpx;
}