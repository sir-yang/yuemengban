
.banner_box {
    position: relative;
    width: 100%;
    height: 352rpx;
    padding: 0 60rpx;
    background: #FEA2C5;
    box-sizing: border-box;
}
.userInfoGongGao {
    width: 100%;
    overflow: hidden;
}

.marquee_box {
    position: relative;
    overflow: hidden;
}

.marquee_text {
    white-space: nowrap;
    position: absolute;
    top: 0;
    font-size: 32rpx;
    color: #fff;
}

.head_img {
    display: block;
    width: 180rpx;
    height: 180rpx;
    margin-top: 28rpx;
    margin-bottom: 24rpx;
    border-radius: 100%;
}

.curve_box{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 108rpx;
    overflow: hidden;
    background: #fff;
    z-index: 1;
}

.curve {
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 2000rpx;
    height: 2000rpx;
    border-radius: 50%;
    background: #FEA2C5;
}

.features_list {
    position: relative;
    padding: 0 60rpx;
    z-index: 2;
}
.features_item {
    width: 630rpx;
    height: 200rpx;
    padding: 0 40rpx;
    margin-bottom: 32rpx;
    background: #fff;
    font-size: 30rpx;
    color: #FEA2C5;
    box-shadow: 0 8rpx 40rpx -16rpx #FEA2C5;
    border-radius: 16rpx;
    box-sizing: border-box;
}
.left_box .line {
    width: 2rpx;
    height: 84rpx;
    background: #FEA2C5;
    margin-left: 30rpx;
}
.right_text {
    margin-left: 100rpx;
}

.btn_box {
    padding: 10rpx 80rpx 0;
}
.mine_btn {
    width: 240rpx;
    height: 88rpx;
    border-radius: 44rpx;
    background: #fff;
    box-shadow: 0 2rpx 40rpx -16rpx #FEA2C5;
    text-align: center;
    line-height: 88rpx;
    font-size: 32rpx;
    color: #FEA2C5;
    padding: 0;
    margin: 0;
    border: none;
}
.mine_btn.active {
    background: #FEA2C5;
    color: #fff;
}
.btn_box button {
    color: #FEA2C5;
    border: none;
}